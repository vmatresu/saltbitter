tech_stack:
 description: Technology stack and development tools
 version: 1.0.0

backend:
 language: Python 3.11+
 framework: FastAPI 0.104+
 orm: SQLAlchemy 2.0
 async: asyncio + asyncpg
 validation: Pydantic 2.0
 testing:
  framework: pytest
  coverage_tool: pytest-cov
  fixtures: pytest-fixtures
 style_guide: PEP 8
 formatter: black
 linters[2]:
  ruff
  bandit (security)
 type_checker: mypy --strict
 docstring_style: Google

frontend:
 language: TypeScript 5.0+
 framework: React 18
 state_management: React Context + Hooks (or Redux, Zustand, etc)
 styling: TailwindCSS 3.0+
 routing: React Router 6
 http_client: fetch API + custom hooks
 testing:
  framework: Jest + React Testing Library
  coverage_tool: Jest --coverage
  e2e: Playwright (optional)
 formatter: Prettier
 linter: ESLint
 type_checker: tsc --noEmit
 build_tool: Vite

mobile:
 framework: React Native + Expo (optional)
 language: TypeScript
 state: Same as frontend
 testing: Jest + React Native Testing Library

database:
 primary: PostgreSQL 15
 migrations: Alembic
 connection_pooling: asyncpg pool
 caching: Redis 7
 search: PostgreSQL full-text search (or Elasticsearch if needed)

infrastructure:
 cloud_provider: AWS
 compute: ECS Fargate (containers)
 database_hosting: RDS PostgreSQL
 cache_hosting: ElastiCache Redis
 storage: S3
 cdn: CloudFront
 infrastructure_as_code: Terraform
 ci_cd: GitHub Actions
 container_registry: ECR

external_services:
 authentication: JWT (internal) or Auth0/Cognito
 payments: Stripe
 email: SendGrid or AWS SES
 sms: Twilio
 monitoring: DataDog or CloudWatch
 logging: CloudWatch Logs or Elastic Stack
 error_tracking: Sentry

development_tools:
 version_control: Git
 package_managers:
  python: pip + pip-tools or poetry
  node: npm or yarn or pnpm
 local_development:
  containers: Docker + Docker Compose
  database: PostgreSQL in Docker
  cache: Redis in Docker

api_design:
 style: REST
 versioning: URL path (/api/v1/)
 documentation: OpenAPI 3.0 (auto-generated by FastAPI)
 authentication: JWT Bearer tokens
 rate_limiting: Redis-based rate limiting

code_organization:
 backend_structure:
  backend/
   api/ (FastAPI routers)
   models/ (SQLAlchemy models)
   schemas/ (Pydantic schemas)
   services/ (Business logic)
   repositories/ (Data access)
   core/ (Config, auth, middleware)
   tests/ (Test suite)

 frontend_structure:
  frontend/
   src/
    components/ (React components)
    pages/ (Page components)
    hooks/ (Custom hooks)
    services/ (API clients)
    contexts/ (React contexts)
    utils/ (Utilities)
    types/ (TypeScript types)
    tests/ (Test suite)

dependencies:
 backend_key_packages[10]:
  fastapi[all]
  sqlalchemy[asyncio]
  alembic
  asyncpg
  pydantic[email]
  python-jose[cryptography] (JWT)
  passlib[bcrypt] (password hashing)
  pytest
  pytest-cov
  pytest-asyncio

 frontend_key_packages[8]:
  react
  react-dom
  react-router-dom
  typescript
  tailwindcss
  @testing-library/react
  @testing-library/jest-dom
  vite

security_tools:
 backend[3]:
  bandit (security linting)
  safety (dependency vulnerabilities)
  pip-audit (dependency audit)

 frontend[2]:
  npm audit (dependency vulnerabilities)
  eslint-plugin-security

performance_tools:
 backend:
  profiling: py-spy or cProfile
  monitoring: DataDog APM or New Relic

 frontend:
  lighthouse: Google Lighthouse
  bundle_analysis: webpack-bundle-analyzer or vite-plugin-visualizer

