# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/saltbitter_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=saltbitter_dev

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# S3/MinIO Configuration (Local Development)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=saltbitter-dev

# Email Configuration (Mailhog for local development)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=noreply@saltbitter.local

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Stripe Configuration (for payments)
STRIPE_API_KEY=sk_test_your-stripe-test-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS Configuration (for production deployment)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# Monitoring and Logging
# DATADOG_API_KEY=
# SENTRY_DSN=

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PAYMENTS=false
ENABLE_VIDEO_CALLS=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
